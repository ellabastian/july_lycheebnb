<h3 class="title" style="text-align: center;margin: 3rem 0;"> Requests </h3>


<div class="row">
  <div class="col-sm-6">
    <div class="card" id="requests-box">
      <h2 id ="colour">Requests I've recieved</h2>
      <div class="card-body" id="requests-body">
       <% @arr.each do |space|%>
        <h3 class="card-title" id ="colour"><%= space.name.upcase%></h3>
        <p class="card-text" id ="colour"><%= @selected_date%></p>
        <form action='/request_form/<%=space.id%>' method='get' id ="colour">
            <button class="btn btn-primary" id ="colour">Confirmation Page</button>
        </form><br>
      <%end%>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card" id="requests-box">
    <h2 id ="colour">Requests I've made</h2>
    <div class="card-body" id="requests-body">
    <% @req_made.each do |request|%>
      <h3 class="card-title" id ="colour"><%= request.space_name%></h3>
      <p class="card-text" id ="colour"><%= request.date_requested%></p>
      <p class="card-text" id ="colour">Not confirmed</p>
      <br>
    <%end%>
    </div>
    </div>
  </div>
</div>


