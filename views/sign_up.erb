<%# sign up form %>
<form class="box" action="/signup" method="post">
    <h1>Signup</h1>
    <input type="text" name="name" maxlength="10" autocomplete='off' placeholder="Username" required>
    <input type="email" name="email" pattern="[^@\s]+@[^@\s]+\.[^@\s]+" maxlength="20" autocomplete='off' placeholder="Email" required>
    <input type="password" name="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" maxlength="20" placeholder="Password" required>
    <button type="submit" name="signup">Create your account</button>
</form>
