<%# sign up form %>
<form id="sign-up" action="/signup" method="POST">
<h1 style="text-align: center;">  Welcome to Lychee MakersBnB</h1>
  <br>
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input type="name" name="name" class="form-control" id="exampleInputName" maxlength="30" autocomplete='off' placeholder="Username" required aria-describedby="emailHelp">
  </div>  
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Email address</label>
    <input type="email" name="email" class="form-control" id="exampleInputEmail1" pattern="[^@\s]+@[^@\s]+\.[^@\s]+" maxlength="20" autocomplete='off' placeholder="Email" required aria-describedby="emailHelp">
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
  </div>
  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">Password</label>
    <input type="password" name="password" class="form-control" id="exampleInputPassword1" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" maxlength="20" placeholder="Password" required>
    <div id="emailHelp" class="form-text">Password should be 8 characters long and must include an uppercase.</div>

  </div>
  <button type="submit" name="signup" class="btn btn-primary">Create your account</button>
</form>

